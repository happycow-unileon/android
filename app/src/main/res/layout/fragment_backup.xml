<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fa6a6a" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/textRealizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizar backup"
            android:gravity="center"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRealizar"/>

        <TextView
            android:id="@+id/errorBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/selectFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar carpeta"
            android:layout_below="@id/folder"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/backup"
            android:layout_below="@id/selectFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizar Backup"
            android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/textRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar backup"
            android:gravity="center"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRecuperar"/>

        <TextView
            android:id="@+id/errorRecover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/selectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar fichero"
            android:layout_below="@id/file"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/recover"
            android:layout_below="@id/selectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurar datos"
            android:layout_alignParentLeft="true"/>

        </RelativeLayout>

</LinearLayout>